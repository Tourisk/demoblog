{% extends 'base.html.twig' %}

{% block title %}Liste voiture!{% endblock %}

{% block body %}

<a class="btn btn-success mt-2 col-12" href="{{ path('exo_create')}}">Ajouter une voiture</a>
<section class="row">
<table class="table">
  <thead>
    <tr>
        <th>Marque</th>
        <th>Modèle</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Type de voiture</th>
        <th>Editer</th>
        <th>Supprimer</th>
    </tr>
    <tbody>
    {% for voiture in voitures %}
      <tr>
        <td>{{ voiture.marque }}</td>
        <td>{{ voiture.modele|raw }}</td>
        <td>{{ voiture.prix }} €</td>
        <td>{{ voiture.description }}</td>
        <td>{{ voiture.typevoiture.titre }}</td>

        <td>
          <a href="{{ path('exo_edit', {id: voiture.id}) }}" class="btn btn-info">Editer</a>
        </td>
        <td>
          <a onclick="return confirm('Voulez-vous supprimer?')" href="{{ path('voiture_delete', {id: voiture.id}) }}" class="btn btn-danger">Supprimer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
</table>
</section>

{% endblock %}

